<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.hzl.administrator.ledcontr.ConnectWifi">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="SSID："
        android:id="@+id/textView_ssid"
        android:layout_marginStart="271dp"
        android:layout_marginTop="159dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:textSize="40dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text=""
        android:id="@+id/textView_ssid_name"
        android:layout_alignBottom="@+id/textView_ssid"
        android:layout_toEndOf="@+id/textView_ssid"
        android:layout_marginStart="30dp"
        android:textSize="40dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="wifi密码："
        android:id="@+id/textView__ps"
        android:textSize="40dp"
        android:layout_alignTop="@id/textView_ssid"
        android:layout_marginTop="60dp"
        android:layout_alignEnd="@+id/textView_ssid" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPassword"
        android:ems="10"
        android:id="@+id/editText_ps"
        android:textSize="30dp"
        android:layout_alignTop="@+id/textView__ps"
        android:layout_alignStart="@+id/textView_ssid_name" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="提交"
        android:id="@+id/button"
        android:layout_alignParentBottom="true"
        android:layout_alignStart="@+id/textView_ssid" />

</RelativeLayout>
