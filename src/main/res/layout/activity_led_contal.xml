<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.hzl.administrator.ledcontr.LedContal">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="红"
        android:id="@+id/textView_red"
        android:layout_marginBottom="45dp"
        android:layout_above="@+id/textView_green"
        android:layout_alignParentStart="true"
        android:layout_marginLeft="40dp"
        android:textSize="30dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="绿"
        android:id="@+id/textView_green"
        android:layout_centerVertical="true"
        android:layout_alignStart="@+id/textView_red"
        android:textSize="30dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="蓝"
        android:id="@+id/textView_blue"
        android:layout_below="@+id/textView_green"
        android:layout_alignStart="@+id/textView_green"
        android:layout_marginTop="45dp"
        android:textSize="30dp"/>

    <SeekBar
        android:layout_width="800dp"
        android:layout_height="wrap_content"
        android:id="@+id/seekBar_red"
        android:max="254"
        android:layout_alignBottom="@+id/textView_red"
        android:layout_centerHorizontal="true" />

    <SeekBar
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/seekBar_green"
        android:layout_centerVertical="true"
        android:layout_alignStart="@+id/seekBar_red"
        android:layout_alignEnd="@+id/seekBar_red" />

    <SeekBar
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/seekBar_blue"
        android:layout_alignTop="@+id/textView_blue"
        android:layout_alignStart="@+id/seekBar_green"
        android:layout_alignEnd="@+id/seekBar_green" />

</RelativeLayout>
